<%= form_with model: @item do |f| %>

      <% if @item.category %>
        <div class="mb-20">
          <%= f.select :category, options_for_select([["Choose Category", ""], ["Coffee", "Coffee"], ["Tea", "Tea"], ["Ice Cream", "Ice Cream"], ["Cake", "Cake"]], @item.category), {}, { class: "form-select" } %>
          <% @item.errors.full_messages_for(:category).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      <% else %>
        <div class="mb-20">
          <%= f.select :category, options_for_select([["Choose Category", ""], ["Coffee", "Coffee"], ["Tea", "Tea"], ["Ice Cream", "Ice Cream"], ["Cake", "Cake"]]), {}, { class: "form-select" } %>
          <% @item.errors.full_messages_for(:category).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div class="mb-20">
        <%= f.text_field :name, class: "name", placeholder: "Item Name" %>
        <% @item.errors.full_messages_for(:name).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
      <div class="mb-20">
        <%= f.text_field :price, class: "price", placeholder: "Item Price" %>
        <% @item.errors.full_messages_for(:price).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
      <div class="mb-20">
        <div class="button-wrap">
          <%= f.file_field :image, class: "img-field-tag" %>
          <% @item.errors.full_messages_for(:image).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      </div>
      <div class="mb-20"><%= f.button :submit, class: "btn-submit" %></div>
      <div><%= link_to "Go Back", items_path, class: "back-button" %></div>
    <% end %>