<div class="aside">
  <h3 class="order-title">Orders</h3>
  <table class="table">
    <thead class="thead">
      <tr>
        <th width="180">Name</th>
        <th width="100">Quantity</th>
        <th width="100">Price(MMK)</th>
      </tr>
    </thead>
    <tbody>
      <% unless orders.length < 1 %>
        <% orders.each do |order| %>
          <tr>
            <% order.each do |key, value| %>
              <td><%= value %></td>
            <% end %>
            <td>
              <a href="<%= cancel_path(item_name: order.values.first) %>" data-remote = true, data-method = "post" class="cancel">
                <i class="fas fa-minus text-secondary"></i>
              </a>
            </td>
          </tr>
        <% end %>
        <tr class="tfoot">
          <td>
            <%= link_to "Confirm Order", confirm_path(total_price: session[:total_price], orders: orders), remote: true, method: "post", class: "btn confirm" %>
          </td>
          <td colspan="2">Total Price - <%= total_price %> MMK</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% unless order_notice.blank? %>
    <div class="mt-30">
      <%= link_to order_notice, orders_path, class: "order-notice" %>
      <%= link_to "Check the Order in orders tab", orders_path, class: "order-notice" %>
    </div>
  <% end %>
</div>
