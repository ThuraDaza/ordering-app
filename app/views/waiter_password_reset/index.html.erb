<div class="ResetForm">
  <h2>Forgot Password?</h2>
  <%= form_with url: waiter_forget_password_path do |form| %>
    <div class="box">
      <%= form.text_field :email, placeholder: "Enter email", class: "email", required: true %>
    </div>
    <div class="submit">
    <%= form.submit "Search", class: "submit-btn" %>
    <%= link_to "Go Back", root_path, class: "cancel-btn" %>
  </div>
  <% end %>
</div>
